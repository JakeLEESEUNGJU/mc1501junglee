<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="authority">

	<select id="list" resultType="Map" parameterType="Map"
		timeout="10">
		select
		AUTHORITY_ID   <!-- 조직 일련번호 -->
		, NAME   <!-- 명칭 -->
		, DESCRIPTION   <!-- 대표 전화번호 -->
		, USE_YN   <!-- 정렬순서 -->
		, REGISTER_SEQ   <!-- 상위 조직 일련번호 -->
		, REGISTRY_DATE
		, MODIFIER_SEQ
		, MODIFY_DATE
		from CIP_AUTHORITY
	</select>

	<select id="idlist" resultType="Map" parameterType="Map">
		SELECT AUTHORITY_ID
		FROM CIP_AUTHORITY_MEMBER
		WHERE MEMBER_SEQ = #{MEMBER_SEQ}
	</select>

	<delete id="delete" parameterType="Map">
		delete from
		CIP_AUTHORITY_MEMBER
		where MEMBER_SEQ = #{MEMBER_SEQ}
	</delete>
</mapper>