<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<!-- common part(nav: top, left ) -->
	<definition name="layout.user" template="/WEB-INF/views/template/layout_user_main.jsp">
		<!-- <put-attribute name="layout.title" value="home" /> -->
		<put-attribute name="layout.header"	value="/WEB-INF/views/template/header.jsp" />
		<put-attribute name="layout.top" value="/WEB-INF/views/template/user_top.jsp" />
		<put-attribute name="layout.footer" value="/WEB-INF/views/template/user_footer.jsp" />
		<!-- <put-attribute name="layout.body" value="/WEB-INF/views/home.jsp" /> -->
   	</definition>
   	
   	<definition name="layout.test" template="/WEB-INF/views/template/layout_user_food.jsp">
		<!-- <put-attribute name="layout.title" value="home" /> -->
		<put-attribute name="layout.header"	value="/WEB-INF/views/template/header.jsp" />
		<put-attribute name="layout.top" value="/WEB-INF/views/template/user_top.jsp" />
		<put-attribute name="layout.footer" value="/WEB-INF/views/template/user_footer.jsp" />
		<!-- <put-attribute name="layout.body" value="/WEB-INF/views/home.jsp" /> -->
   	</definition>
   
	
	<!-- 1 depth -->
	<definition name="*" extends="layout.user">
		<put-attribute name="layout.title" value="{1}" />
		<put-attribute name="layout.body" value="/WEB-INF/views/{1}.jsp" />
   	</definition>

	<!-- 2 depth -->
	<definition name="/*/*" extends="layout.user">
		<put-attribute name="layout.title" value="{1}-{2}" />
		<put-attribute name="layout.body" value="/WEB-INF/views/{1}/{2}.jsp" />
   	</definition>
   	
   	<definition name="/foodstore/list" extends="layout.test">
		<put-attribute name="layout.title" value="{1}-{2}" />
		<put-attribute name="layout.body" value="/WEB-INF/views/foodstore/list.jsp" />
		<put-attribute name="layout.left" value="/WEB-INF/views/template/user_left.jsp" />
		<put-attribute name="layout.right" value="/WEB-INF/views/template/user_right.jsp" />
   	</definition>


</tiles-definitions>
